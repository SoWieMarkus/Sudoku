<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sudoku" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sudoku_highlight</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="sudoku_bold_frame_color">@color/sudoku_bold_border_night</item>

        <item name="background_main">@color/background_main_night</item>
        <item name="sudoku_field_background">@color/sudoku_field_background_night</item>
        <item name="sudoku_field_background_given">@color/sudoku_field_background_given_night</item>
        <item name="sudoku_field_text_color">@color/white</item>
        <item name="sudoku_hint_icon">@color/sudoku_hint_night</item>

        <item name="sudoku_select_number_color_background">@color/sudoku_field_background_given_night</item>

    </style>
</resources>